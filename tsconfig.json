{
  "compilerOptions": {
    "lib": ["ES5", "ES6"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "strictPropertyInitialization": false,
    "baseUrl": "/",
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
